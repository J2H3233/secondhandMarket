<!-- 검색 및 필터 섹션 --><section class="search-section">
  <div class="search-container">
    <form class="search-form" method="get" action="/search">
      <div class="search-input-group">
        <i class="fas fa-search search-icon"></i>
        <input type="text" name="query" placeholder="어떤 상품을 찾고 계세요?" class="search-input">
        <button type="submit" class="search-btn">검색</button>
      </div>
    </form>
  </div>
</section>

<section class="category-section">
  <div class="category-container">
    <h2 class="section-title">카테고리</h2>
    <div class="category-grid">
      <a href="/category/electronics" class="category-item">
        <i class="fas fa-mobile-alt"></i>
        <span>전자기기</span>
      </a>
      <a href="/category/fashion" class="category-item">
        <i class="fas fa-tshirt"></i>
        <span>의류/패션</span>
      </a>
      <a href="/category/books" class="category-item">
        <i class="fas fa-book"></i>
        <span>도서/문구</span>
      </a>
      <a href="/category/home" class="category-item">
        <i class="fas fa-home"></i>
        <span>생활용품</span>
      </a>
      <a href="/category/sports" class="category-item">
        <i class="fas fa-dumbbell"></i>
        <span>스포츠</span>
      </a>
      <a href="/category/beauty" class="category-item">
        <i class="fas fa-spa"></i>
        <span>미용</span>
      </a>
      <a href="/category/food" class="category-item">
        <i class="fas fa-utensils"></i>
        <span>식품</span>
      </a>
      <a href="/category/others" class="category-item">
        <i class="fas fa-ellipsis-h"></i>
        <span>기타</span>
      </a>
    </div>
  </div>
</section>

<main class="products-section">
  <div class="products-container">
    <div class="section-header">
      <h2 class="section-title">최신 상품</h2>
    </div>
    
    <div class="products-grid">
      <% if (typeof posts !== 'undefined' && posts && posts.length > 0) { %>
        <% posts.forEach(function(post) { %>
          <a href="/post/<%= post.id %>" class="product-card-link">
            <div class="product-card">
              <div class="product-image">
                <% if (post.images && post.images.length > 0) { %>
                  <img src="<%= post.images[0] %>" alt="<%= post.title %>">
                <% } else { %>
                  <img src="https://via.placeholder.com/250x200/E2E8F0/718096?text=이미지없음" alt="<%= post.title %>">
                <% } %>
                <div class="product-status <%= post.status === 'CLOSE' ? 'sold' : '' %>">
                  <%= post.status === 'CLOSE' ? '판매완료' : '판매중' %>
                </div>
              </div>
              <div class="product-info">
                <h3 class="product-title"><%= post.title %></h3>
                <p class="product-price"><%= post.price ? post.price.toLocaleString() : 0 %>원</p>
                <div class="product-meta">
                  <span class="location"><i class="fas fa-map-marker-alt"></i> <%= post.region || '지역정보없음' %></span>
                  <span class="time"><i class="fas fa-clock"></i> <%= new Date(post.createdAt).toLocaleDateString() %></span>
                </div>
              </div>
            </div>
          </a>
        <% }); %>
      <% } else { %>
        <div class="no-posts-message" style="grid-column: 1/-1; text-align: center; padding: 50px; color: #888;">
          <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 20px; display: block;"></i>
          <p>아직 등록된 상품이 없습니다.</p>
          <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
            <a href="/post/new" class="btn btn-primary" style="margin-top: 20px; display: inline-block;">첫 상품 등록하기</a>
          <% } %>
        </div>
      <% } %>
    </div>
    
    <div class="load-more">
      <button class="btn btn-outline">더 많은 상품 보기</button>
    </div>
  </div>
</main>