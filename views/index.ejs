<!-- 최신 상품 섹션 -->
<main class="products-section">
  <div class="products-container">
    <div class="section-header">
      <h2 class="section-title">최신 상품</h2>
      <!-- <div class="sort-options">
        <select class="sort-select">
          <option value="latest">최신순</option>
          <option value="price-low">낮은 가격순</option>
          <option value="price-high">높은 가격순</option>
          <option value="popular">인기순</option>
        </select>
      </div> -->
    </div>
    
    <div class="products-grid">
      <% if (typeof posts !== 'undefined' && posts && posts.length > 0) { %>
        <% posts.forEach(function(post) { %>
          <div class="product-card">
            <div class="product-image">
              <% if (post.images && post.images.length > 0) { %>
                <img src="<%= post.images[0] %>\" alt="<%= post.title %>">
              <% } else { %>
                <img src="https://via.placeholder.com/250x200/E2E8F0/718096?text=이미지없음\" alt="<%= post.title %>">
              <% } %>
              <div class="product-status <%= post.status === 'SOLD' ? 'sold' : '' %>"><%= post.status === 'SOLD' ? '판매완료' : '판매중' %></div>
            </div>
            <div class="product-info">
              <h3 class="product-title"><%= post.title %></h3>
              <p class="product-price"><%= post.price.toLocaleString() %>원</p>
              <div class="product-meta">
                <span class="location"><i class="fas fa-map-marker-alt"></i> <%= post.region || '지역정보없음' %></span>
                <span class="time"><i class="fas fa-clock"></i> <%= new Date(post.createdAt).toLocaleDateString() %></span>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <!-- 샘플 게시글들 -->
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/4A90E2/ffffff?text=헤드폰" alt="무선 헤드폰">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">소니 무선 헤드폰 WH-1000XM4</h3>
            <p class="product-price">150,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 서울 강남구</span>
              <span class="time"><i class="fas fa-clock"></i> 2시간 전</span>
            </div>
          </div>
        </div>
      <% } %>
        
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/50C878/ffffff?text=책" alt="전공서적">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">컴퓨터공학 전공서적 3권 세트</h3>
            <p class="product-price">25,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 서울 성북구</span>
              <span class="time"><i class="fas fa-clock"></i> 1일 전</span>
            </div>
          </div>
        </div>
        
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/FF6B6B/ffffff?text=의류" alt="후드티">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">나이키 후드티 (M사이즈)</h3>
            <p class="product-price">35,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 경기 성남시</span>
              <span class="time"><i class="fas fa-clock"></i> 3시간 전</span>
            </div>
          </div>
        </div>
        
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/FFD93D/ffffff?text=전자기기" alt="태블릿">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">아이패드 에어 4세대 64GB</h3>
            <p class="product-price">450,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 서울 마포구</span>
              <span class="time"><i class="fas fa-clock"></i> 5시간 전</span>
            </div>
          </div>
        </div>
        
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/A569BD/ffffff?text=화장품" alt="화장품">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">에스티로더 파운데이션 새상품</h3>
            <p class="product-price">28,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 서울 종로구</span>
              <span class="time"><i class="fas fa-clock"></i> 1일 전</span>
            </div>
          </div>
        </div>
        
        <div class="product-card">
          <div class="product-image">
            <img src="https://via.placeholder.com/250x200/45B7D1/ffffff?text=가전" alt="청소기">
            <div class="product-status">판매중</div>
          </div>
          <div class="product-info">
            <h3 class="product-title">다이슨 무선청소기 V8</h3>
            <p class="product-price">180,000원</p>
            <div class="product-meta">
              <span class="location"><i class="fas fa-map-marker-alt"></i> 인천 남동구</span>
              <span class="time"><i class="fas fa-clock"></i> 6시간 전</span>
            </div>
          </div>
        </div>
    </div>
    
    <div class="load-more">
      <button class="btn btn-outline">더 많은 상품 보기</button>
    </div>
  </div>
</main>