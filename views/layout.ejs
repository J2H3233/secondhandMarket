<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || '한성마켓 - 대학생 중고거래' %></title>
  <link rel="stylesheet" href="/css/style.css">
  <% if (typeof additionalCSS !== 'undefined' && additionalCSS) { %>
    <% additionalCSS.forEach(function(css) { %>
      <link rel="stylesheet" href="<%= css %>">
    <% }); %>
  <% } %>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <% if (typeof showHeader === 'undefined' || showHeader !== false) { %>
  <!-- 헤더 -->
  <header class="header">
    <div class="header-content">
      <div class="logo">
        <a href="/">
          <h1>한성마켓</h1>
        </a>
      </div>
      
      <nav class="nav-menu">
        <% if (user) { %>
          <a href="/post/new" class="nav-link">
            <i class="fas fa-plus"></i>
            판매하기
          </a>
          <a href="/profile" class="nav-link">
            <i class="fas fa-user"></i>
            내 정보
          </a>
          <a href="/auth/logout" class="nav-link">
            <i class="fas fa-sign-out-alt"></i>
            로그아웃
          </a>
        <% } else { %>
          <a href="/auth/login" class="nav-link">
            <i class="fas fa-sign-in-alt"></i>
            로그인
          </a>
          <a href="/auth/register" class="nav-link">
            <i class="fas fa-user-plus"></i>
            회원가입
          </a>
        <% } %>
      </nav>
    </div>
  </header>
  <% } %>

  <!-- 메인 콘텐츠 -->
  <%- body %>

  <% if (typeof showFooter === 'undefined' || showFooter !== false) { %>
  <!-- 푸터 -->
  <footer class="footer">
    <div class="footer-content">
      <p>&copy; 2024 한성마켓. All rights reserved.</p>
    </div>
  </footer>
  <% } %>

  <% if (typeof additionalJS !== 'undefined' && additionalJS) { %>
    <% additionalJS.forEach(function(js) { %>
      <script src="<%= js %>"></script>
    <% }); %>
  <% } %>
</body>
</html>